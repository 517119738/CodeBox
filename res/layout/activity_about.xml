<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    
    <com.jcodecraeer.jcode.view.OverScrollView 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:fillViewport="true"
    >
        <LinearLayout 
            android:orientation="vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:padding="15dip" 
            android:gravity="center"
        >
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"	
			    android:orientation="vertical"
                android:padding="15dip"	
			    android:layout_marginTop="15dip"                		    
			>    
				<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textSize="18dip"
				    android:text="jcode是一个搜集优秀android开源代码并提供演示的安卓客户端，源码的搜集来自于网站《泡在网上的日子》，欢迎访问。"		    
				/> 		
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"	
			    android:orientation="vertical"
			    android:layout_marginTop="15dip"
                android:padding="15dip"			    
			>   
				<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textSize="18dip"
				    android:text="非常感谢DL开发框架的作者们，DL的插件机制是本软件演示功能的核心。"		    
				/> 		
			</LinearLayout>
			
		    <LinearLayout 
		         android:orientation="vertical" 
		         android:layout_width="fill_parent" 
		         android:layout_height="wrap_content"
		         android:padding="8dip" 
		         android:gravity="center"
		     >  
		         <Button
		             android:id="@+id/run"
		             android:layout_width="wrap_content" 
		             android:layout_height="45dip" 
			         android:padding="10dip" 		                
		             android:background="#32CD32"  
		             android:textColor="#ffffff"  		             
		             android:text="访问泡在网上的日子"           
		         />  
		    </LinearLayout>
        </LinearLayout>
    </com.jcodecraeer.jcode.view.OverScrollView>		
</RelativeLayout>